{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "source",
    "outDir": "./",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "**/*Settings.ts",
    "test/**/*ts"
  ]
}